                            label="Title Color" textProperty="color"
                            collectionProperty="colors" labelField="label"
							labelDisplayFunction="getDominoFieldName" showTooltipFunction="getDominoFieldTooltip"
                            listItemRenderer="view.primeFaces.forms.renderer.IncludeDropdownListRenderer"/>
		
		<domino:MultipleCheckbox label="Title Style:" 
		optionExculdeFunction="excludeMultipleSelect"
		collectionProperty="fontStyles" textProperty="fontStyle"/>	

     <forms:DropdownListForm id="onread"
                            label="Onread" textProperty="onread"
                            collectionProperty="sectionTokens" labelField="label"
							labelDisplayFunction="getDominoFieldName" showTooltipFunction="getDominoFieldTooltip"
                            listItemRenderer="view.primeFaces.forms.renderer.IncludeDropdownListRenderer"/>

    <forms:DropdownListForm id="onedit"
                            label="Onedit" textProperty="onedit"
                            collectionProperty="sectionTokens" labelField="label"
							labelDisplayFunction="getDominoFieldName" showTooltipFunction="getDominoFieldTooltip"
                            listItemRenderer="view.primeFaces.forms.renderer.IncludeDropdownListRenderer"/>	   

 <forms:DropdownListForm id="onpreview"
                            label="Onpreview" textProperty="onpreview"
                            collectionProperty="sectionTokens" labelField="label"
							labelDisplayFunction="getDominoFieldName" showTooltipFunction="getDominoFieldTooltip"
                            listItemRenderer="view.primeFaces.forms.renderer.IncludeDropdownListRenderer"/>	  
 <forms:DropdownListForm id="onprint"
                            label="Onprint" textProperty="onprint"
                            collectionProperty="sectionTokens" labelField="label"
							labelDisplayFunction="getDominoFieldName" showTooltipFunction="getDominoFieldTooltip"
                            listItemRenderer="view.primeFaces.forms.renderer.IncludeDropdownListRenderer"/>	 

<forms:DropdownListForm id="accessfieldkind"
                            label="File Kind" textProperty="accessfieldkind"
                            collectionProperty="fieldKinds" labelField="label"
							labelDisplayFunction="getDominoFieldName" showTooltipFunction="getDominoFieldTooltip"
                            listItemRenderer="view.primeFaces.forms.renderer.IncludeDropdownListRenderer"/>	 
<forms:ToggleButtonSelectedForm label="Expanded" textProperty="expanded"/>

<forms:ToggleButtonSelectedForm label="Show as text" textProperty="showastext"/>
                        
    <s:FormHeading label="Data" skinClass="skins.FormHeadingSkin"/>

    
    <forms:TextInformationForm label="Additional information" textProperty="cdataInformation"/>
</suportclasses:BasePropertyEditor>