<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  creationComplete="onCreationCompletes()" xmlns:tabularInterface="view.tabularInterface.*">
	<fx:Script>
		<![CDATA[
			import utils.MoonshineBridgeUtils;
			
			import view.interfaces.ITabularInterfaceEditorLibraryBridge;
			
			public var filePath:File;
			
			public function set moonshineBridge(value:ITabularInterfaceEditorLibraryBridge):void
			{
				MoonshineBridgeUtils.moonshineBridgeTabularInterface = value;
			}
			
			public function save():void
			{
				formDescriptor.saveDominoForm();
			}
			
			public function dispose():void
			{
				MoonshineBridgeUtils.moonshineBridgeTabularInterface = null;
				formDescriptor.dispose();
			}
			
			private function onCreationCompletes():void
			{
				formDescriptor.filePath = this.filePath;
			}
			
		]]>
	</fx:Script>
	<fx:Style source="assets/VisualEditorStyles.css"/>
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="0xf5f5f5"/>
		</s:fill>
	</s:Rect>
	
	<tabularInterface:FormDescriptor id="formDescriptor"
									 tabularTab="{this}"
									 width="100%" height="100%"/>
</s:Group>