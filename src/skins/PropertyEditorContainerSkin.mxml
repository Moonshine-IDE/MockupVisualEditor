<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark">

	<fx:Metadata>
		[HostComponent("spark.components.BorderContainer")]
	</fx:Metadata>

	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>

	<s:Rect top="0" right="0" bottom="0" left="1">
		<s:fill>
			<s:SolidColor id="backgroundFill" color="#ffffff"/>
		</s:fill>
	</s:Rect>
	<s:Line top="0" bottom="0" left="0">
		<s:stroke>
			<s:SolidColorStroke weight="1" color="#000000"/>
		</s:stroke>
	</s:Line>

	<s:Scroller width="100%" height="100%" minWidth="0" minHeight="0">
		<s:Group id="contentGroup" clipAndEnableScrolling="true">
		</s:Group>
	</s:Scroller>
	
	<fx:Script><![CDATA[

		private static const contentFill:Array = 
		[
			"backgroundFill"
		];

		override public function get contentItems():Array { return contentFill; }
	]]></fx:Script>
</s:SparkSkin>
